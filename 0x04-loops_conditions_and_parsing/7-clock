#!/usr/bin/env bash
# displays the time for 12 hours and 59 minutes
# display hours from 0 to 12
# display minutes from 1 to 59

count=0
minutes=0
while true
do      
    case $minutes in
        0)
            echo "Hour: ${minutes}"
        ;;
        60)
            echo "Hour: ${minutes}"
            minutes=1
            ((count++))
        ;;
        *)
    esac
        
    if [[ $count -eq 13 ]]
    then
        break
    else
        echo "${minutes}"
        if [[ $minutes -eq 59 && $count -eq 12 ]]
        then
            break
        fi
    fi

    ((minutes++))
done